pico-8 cartridge // http://www.pico-8.com
version 16
__lua__
cam_x = 0
cam_y = 0

-- ranges between 0 -> 1
-- 0.0 = full left
-- 0.5 = equilibrium
-- 1.0 = full right
tilt      = 0.5
tilt_eq   = 0.5
tilt_min  = 0.0
tilt_max  = 1.0
tilt_tick = 0.001

function update_tilt()
  -- get squared distance for change,
  -- i.e. tilt more when ur further out
  tilt_d = (abs(tilt_eq - tilt) ^ 2) / 10

  if tilt > tilt_eq then
    -- tilt right more if we are already tilting
    tilt   = min(tilt + tilt_d, tilt_max)
  elseif tilt < tilt_eq then
    -- tilt left more if we are already tilting
    tilt   = max(tilt - tilt_d, tilt_min)
  else
    -- don't change our tilt if we're in equilibrium
  end
end

function _init()
end

function _update()
  update_tilt()
  if (btn(0)) tilt -= 0.05
  if (btn(1)) tilt += 0.05
end

function _draw()
  cls()
  
  camera(cam_x, cam_y)
  --circfill(x, y, 7, 14)

  map(0, 0, 0, 0, 100, 100)

  camera()

  print('tilt: '..tilt, 0, 0, 7)
end

